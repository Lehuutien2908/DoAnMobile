<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Tiêu đề "Quản lý phim" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý phim"
        android:textSize="20sp"
        android:textColor="#1E88E5"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Thanh tìm kiếm với khung hình chữ nhật và màu nền sáng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0F7FA"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp">

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm kiếm phim..."
        android:textColorHint="#B0BEC5"
        android:textColor="#000000"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:inputType="text"
        android:maxLines="1"
        android:imeOptions="actionSearch" />
</LinearLayout>

    <!-- Nút Thêm Phim Mới với màu tím và bo góc -->

    <!-- Danh sách các bộ phim theo chiều dọc -->

    <Button
        android:id="@+id/btnAddMovie"
        android:layout_width="395dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_button_purple"
        android:padding="12dp"
        android:text="+ Thêm Phim Mới"
        android:textColor="#FFFFFF" />

    <LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="1"
android:orientation="vertical"
android:padding="8dp">

<!-- Movie Item 1 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <!-- Poster Phim -->
    <ImageView
        android:id="@+id/imgPoster1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fim"
        android:layout_marginEnd="12dp" />

    <!-- Tên Phim -->
    <TextView
        android:id="@+id/movieName1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Avengers: Endgame"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <!-- Nút Sửa và Xóa -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEdit1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnDelete1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete" />
    </LinearLayout>
</LinearLayout>

<!-- Movie Item 2 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgPoster2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_movie_bklr"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/movieName2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="Bí kíp luyện rồng"
        android:textColor="#000000"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEdit2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnDelete2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xoá" />
    </LinearLayout>
</LinearLayout>

<!-- Movie Item 3 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgPoster3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_movie_batman"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/movieName3"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="The Batman"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEdit3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Sửa"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnDelete3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xoá" />
    </LinearLayout>
</LinearLayout>

<!-- Movie Item 4 -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgPoster4"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_movie_oppenheimer"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/movieName4"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Oppenheimer"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEdit4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Sửa"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnDelete4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Xoá" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
    </LinearLayout>