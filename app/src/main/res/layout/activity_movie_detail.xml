<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Phần nội dung có thể cuộn -->
    <ScrollView
        android:id="@+id/movie_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:paddingBottom="72dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ảnh poster -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp">

                <ImageView
                    android:id="@+id/moviePoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fim" />

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="12dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_back"
                    android:contentDescription="Quay lại"
                    android:tint="@android:color/white" />
            </FrameLayout>

            <!-- Tên phim -->
            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avenger 4: Hồi kết"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/movieAgeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T18"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:backgroundTint="#FF3F33"
                android:background="@drawable/age_label_background"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp" />

            <!-- Thông tin phim -->
            <TextView
                android:id="@+id/movieInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thể loại: Hành động | Thời lượng: 180 phút | Đạo diễn: Russo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:paddingTop="4dp" />

            <!-- Mô tả -->
            <TextView
                android:id="@+id/movieDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sau những sự kiện tàn khốc trong Infinity War, các siêu anh hùng còn sống sót tìm cách đảo ngược hành động của Thanos..."
                android:textSize="16sp"
                android:paddingTop="12dp"
                android:textColor="#333333" />

            <!-- Chọn ngày chiếu -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày chiếu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:textColor="#000000" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/06" />

                    <Button
                        android:id="@+id/date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13/06" />

                    <Button
                        android:id="@+id/date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14/06" />

                    <Button
                        android:id="@+id/date4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15/06" />

                    <Button
                        android:id="@+id/date5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16/06" />

                    <Button
                        android:id="@+id/date6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17/06" />

                    <Button
                        android:id="@+id/date7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/06" />

                </LinearLayout>
            </HorizontalScrollView>


            <!-- Chọn rạp -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn rạp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="16dp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <RadioGroup
                    android:id="@+id/cinemaGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/cinema1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CGV Vincom Quang Trung" />

                    <RadioButton
                        android:id="@+id/cinema2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Galaxy Nguyễn Du" />
                </RadioGroup>
                <LinearLayout
                    android:id="@+id/layoutShowTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingTop="12dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:30"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:45" />
                </LinearLayout>

            </LinearLayout>

            <!-- Nút đặt vé -->
            <Button
                android:id="@+id/btnDatVe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đặt vé ngay"
                android:layout_marginTop="20dp"
                android:backgroundTint="#FF3F33"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>