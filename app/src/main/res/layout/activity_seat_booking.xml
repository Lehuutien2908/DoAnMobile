<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Header: Tên rạp, tên phim, suất chiếu -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- Tên rạp -->
        <TextView
            android:id="@+id/tvCinemaName"
            android:text="Đang tải tên rạp..."
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Tên phim và giờ chiếu -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMovieTitle"
                android:text="Đang tải tên phim..."
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvSelectedTimeDisplay"
                android:text="--"
                android:background="@drawable/bg_gray_round"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Loại phim (2D LỒNG TIẾNG) -->
        <TextView
            android:id="@+id/tvMovieType"
            android:text="Đang tải loại phim..."
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Ghế: GridLayout + Label hàng -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Label cột trái -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView android:text="A" style="@style/SeatRowLabel"/>
                <TextView android:text="B" style="@style/SeatRowLabel"/>
                <TextView android:text="C" style="@style/SeatRowLabel"/>
                <TextView android:text="D" style="@style/SeatRowLabel"/>
                <TextView android:text="E" style="@style/SeatRowLabel"/>
                <TextView android:text="F" style="@style/SeatRowLabel"/>
                <TextView android:text="G" style="@style/SeatRowLabel"/>
                <TextView android:text="H" style="@style/SeatRowLabel"/>
                <TextView android:text="I" style="@style/SeatRowLabel"/>
            </LinearLayout>

            <!-- Ghế: GridLayout 9x8 -->
            <GridLayout
                android:id="@+id/gridSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="9"
                android:columnCount="8"
                android:layout_marginHorizontal="8dp">
                <!-- Các ghế sẽ được add động từ code, mỗi ghế là 1 ImageView hoặc Button -->
            </GridLayout>

            <!-- Label cột phải -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView android:text="A" style="@style/SeatRowLabel"/>
                <TextView android:text="B" style="@style/SeatRowLabel"/>
                <TextView android:text="C" style="@style/SeatRowLabel"/>
                <TextView android:text="D" style="@style/SeatRowLabel"/>
                <TextView android:text="E" style="@style/SeatRowLabel"/>
                <TextView android:text="F" style="@style/SeatRowLabel"/>
                <TextView android:text="G" style="@style/SeatRowLabel"/>
                <TextView android:text="H" style="@style/SeatRowLabel"/>
                <TextView android:text="I" style="@style/SeatRowLabel"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Màn hình -->
    <TextView
        android:text="MÀN HÌNH"
        android:gravity="center"
        android:textColor="#888888"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@android:color/holo_orange_light"
        android:layout_marginBottom="8dp"/>

    <!-- Chú thích loại ghế -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <CheckBox android:text="Ghế thường" android:buttonTint="#CCCCCC" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <CheckBox android:text="Ghế đôi" android:buttonTint="#2196F3" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <CheckBox android:text="Ghế VIP" android:buttonTint="#FFD600" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <CheckBox android:text="Ghế ba" android:buttonTint="#FF9800" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <CheckBox android:text="Đã bán" android:buttonTint="#BDBDBD" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="8dp"/>
        <CheckBox android:text="Đang chọn" android:buttonTint="#FF6F00" android:enabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Thông tin ghế và tổng tiền -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvSeatInfo"
            android:text="8x ghế: I1, I2, I3, I4, I5, I6, I7, I8"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:text="Tổng cộng: 760,000Đ"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Nút tiếp tục -->
    <Button
        android:id="@+id/btnContinue"
        android:text="Tiếp Tục"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF9800"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>
</LinearLayout> 