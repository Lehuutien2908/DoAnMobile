<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý suất chiếu"
        android:textSize="20sp"
        android:textColor="#1E88E5"
        android:gravity="center"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E0F7FA"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm suất chiếu..."
            android:textColorHint="#B0BEC5"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionSearch" />
    </LinearLayout>

    <Button
        android:id="@+id/btnAddMovie"
        android:layout_width="395dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_button_purple"
        android:padding="12dp"
        android:text="+ Thêm lịch chiếu"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Suất chiếu 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Tên phim -->
            <TextView
                android:id="@+id/movieName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Avengers: Endgame"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Giờ chiếu -->
            <TextView
                android:id="@+id/movieTime1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="14:00"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Ngày chiếu -->
            <TextView
                android:id="@+id/movieDate1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="22/06/2025"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Nút Sửa và Xóa -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEdit1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/btnDelete1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>
        </LinearLayout>

        <!-- Suất chiếu 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movieName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Spider-Man: No Way Home"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movieTime2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="16:30"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movieDate2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="22/06/2025"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEdit2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/btnDelete2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>
        </LinearLayout>

        <!-- Suất chiếu 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movieName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="The Batman"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movieTime3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="19:00"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movieDate3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="23/06/2025"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEdit3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/btnDelete3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>
        </LinearLayout>

        <!-- Suất chiếu 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movieName4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Oppenheimer"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movieTime4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="21:30"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/movieDate4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="24/06/2025"
                android:textColor="#000000"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnEdit4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_edit" />

                <ImageButton
                    android:id="@+id/btnDelete4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:background="@android:color/transparent"
                    android:src="@android:drawable/ic_menu_delete" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>