<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Phần chưa đăng nhập: Đăng ký thành viên Star -->
        <LinearLayout
            android:id="@+id/layoutGuestContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_tab_border"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký thành viên "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận ngay ưu đãi!"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đăng ký"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đăng nhập"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FF9800"
                    app:strokeColor="#FF9800"
                    app:strokeWidth="1dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thông tin thêm -->
        <TextView
            android:id="@+id/tvHotline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:layout_marginTop="12dp"
            android:text="Gọi ĐƯỜNG DÂY NÓNG: 19002224"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:text="Email: hotro@galaxystudio.vn"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/tvCompanyInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:text="Thông Tin Công Ty" />

        <TextView
            android:id="@+id/tvTermsOfUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:text="Điều khoản sử dụng" />

        <TextView
            android:id="@+id/tvPaymentPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:text="Chính sách thanh toán" />

        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:text="Chính sách bảo mật" />

        <TextView
            android:id="@+id/tvFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_tab_border"
            android:padding="10dp"
            android:text="Câu hỏi thường gặp" />
    </LinearLayout>
</ScrollView>
